<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>InvoiceFilter</filter-name>
        <filter-class>filters.InvoiceFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ReportFilter</filter-name>
        <filter-class>filters.ReportFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ReportFilter</filter-name>
        <url-pattern>/pages/Report.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>InvoiceFilter</filter-name>
        <url-pattern>/pages/customer/Invoices.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>ChangeProfileUser</servlet-name>
        <servlet-class>controllers.ChangeProfileUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutUser</servlet-name>
        <servlet-class>controllers.LogoutUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUser</servlet-name>
        <servlet-class>controllers.LoginUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controllers.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Invoices</servlet-name>
        <servlet-class>controllers.Invoices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeProfileUser</servlet-name>
        <url-pattern>/ChangeProfileUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutUser</servlet-name>
        <url-pattern>/LogoutUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUser</servlet-name>
        <url-pattern>/LoginUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Invoices</servlet-name>
        <url-pattern>/Invoices</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Controller</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/customer/Error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/customer/Error500.jsp</location>
    </error-page>
</web-app>
